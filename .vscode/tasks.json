{
	"tasks": [
		{
			"type": "shell",
			"label": "Build Engine",
			"windows": {
				"command": "${workspaceFolder}/scripts/windows/build-engine.bat"
			},
			"linux": {
				"command": "${workspaceFolder}/scripts/linux/build-engine.sh"
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "Build Editor",
			"windows": {
				"command": "${workspaceFolder}/scripts/windows/build-editor.bat"
			},
			"linux": {
				"command": "${workspaceFolder}/scripts/linux/build-editor.sh"
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
		},
		{
			"type": "shell",
			"label": "Build All",
			"windows": {
				"command": "${workspaceFolder}/scripts/windows/build-all.bat"
			},
			"linux": {
				"command": "${workspaceFolder}/scripts/linux/build-all.sh"
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	],
	"version": "2.0.0"
}
